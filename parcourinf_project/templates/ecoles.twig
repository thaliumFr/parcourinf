{% extends 'base.twig' %}
{% load ariane %}

{% block arianeLinks %}
  {% lien_ariane 'acceuil/ecoles' %}
{% endblock %}

{% block content %}
  <h1>Les écoles</h1>

  {% for ecole in ecoles %}
    <div class="fr-card fr-enlarge-link fr-card--horizontal fr-my-4w">
      <div class="fr-card__body">
        <div class="fr-card__content">
          <h3 class="fr-card__title"><a href="{% url 'ecole' ecole.id %}">{{ ecole.nom }}</a></h3>
          <p class="fr-card__desc">Cet établisement propose {{ ecole.offres|length }} offres.</p>
          <div class="fr-card__start"></div> <div class="fr-card__end">
            <p class="fr-card__detail fr-icon-phone-line">Téléphone: {{ ecole.telephone }}</p>
            <p class="fr-card__detail fr-icon-mail-open-line">Mail: {{ ecole.email }}</p>
            <p class="fr-card__detail fr-icon-building-line">Adresse: {{ ecole.adresse }}</p>
            <p class="fr-card__detail fr-icon-dashboard-3-line">Département: {{ ecole.numeroDepartement }}</p>
          </div>
        </div>
      </div> <div class="fr-card__header">
        <div class="fr-card__img">
          <img class="fr-responsive-img" src="{{ ecole.img }}" alt="{{ ecole.nom }} image" />
        </div>
      </div>
    </div>
  {% endfor %}
{% endblock %}
