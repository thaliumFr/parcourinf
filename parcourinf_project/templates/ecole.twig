{% extends 'base.twig' %}
{% load ariane %}

{% block arianeLinks %}
  {% lien_ariane 'Acceuil' %}
{% endblock %}

{% block content %}
  <h1>{{ ecole.nom }}</h1>
  <figure class="fr-content-media" role="group" aria-label="© Légende de l‘image">
    <div class="fr-content-media__img">
      <img class="fr-responsive-img fr-ratio-32x9" src="{{ ecole.img }}" alt="[À MODIFIER - vide ou texte alternatif de l’image]" />
      <!-- L’alternative de l’image (attribut alt) doit toujours être présente, sa valeur peut-être vide (image n’apportant pas de sens supplémentaire au contexte) ou non (porteuse de texte ou apportant du sens) selon votre contexte -->
    </div>
  </figure>
  <h2>Offres</h2>
  <p>{{ ecole.offres|length }} offres disponibles</p>
  {% for offre in ecole.offres %}
    <div class="fr-card fr-enlarge-link fr-card--horizontal fr-my-4w">
      <div class="fr-card__body">
        <div class="fr-card__content">
          <h2 class="">{{ offre.nom }}</h2>
          <h3 class="fr-card__detail fr-icon-building-line">{{ offre.ecole }}</h3>
          <p class="fr-card__desc">{{ offre.description }}</p>
          <div class="fr-card__start"></div> <div class="fr-card__end">
            <p class="fr-card__detail fr-icon-team-line">Nombre de place(s): {{ offre.nombre_place }}</p>
            <p class="fr-card__detail fr-icon-psychotherapy-line">Filliere: {{ offre.filliere }}</p>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
{% endblock %}
